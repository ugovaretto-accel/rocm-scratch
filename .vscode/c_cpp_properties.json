    "env": {
      "myDefaultIncludePath": ["${workspaceFolder}"]
    },
    "configurations": [
      {
        "name": "ROCm",
        "intelliSenseMode": "clang-x64",
        "includePath": ["${myDefaultIncludePath}", "/opt/rocm/hip/include"],
        "compilerPath": "/opt/rocm/hip/bin/hipcc",
